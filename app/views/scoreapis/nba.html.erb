<div class="page-header">
  <h1>Partits Dia NBA</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>'Local'</th>
      <th>'Visitant'</th>
      <th>'Resultat'</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game['AwayTeam']['name'] %></td>
        <td><%= game['HomeTeam']['name'] %></td>
        <td><%= game['AwayTeam']['score'] %>  - <%= game['HomeTeam']['score'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

