<%- model_class = Game -%>
<div class="row">
  <div class="span8">
    <h1>Partits</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Accio</th>
          <th>Partit</th>
          <th>Tancament</th>
          <th>Aposta</th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
        <tr>
          <td>
            <% if game.closeTime.past? %>
            <%= link_to "Tancat",
            game_bets_path(game.id),
            :class => 'btn btn-primary' %>
            <% else %>
            <% if game.bets.where(user_id: current_user.id).exists? %>
            <%= link_to "Cambiar",
            edit_game_bet_path(game.id,game.bets.where(user_id: current_user.id).take(1)[0].id),
            :class => 'btn btn-primary' %>
            <% else %>
            <%= link_to "Jugar",
            new_game_bet_path(game.id),
            :class => 'btn btn-primary' %>
            <% end %>
            <% end %>  
          </td>
          <td><%= game.description %></td>
          <td><%= game.closeTime %></td>
          <td>
            <% if game.bets.where(user_id: current_user.id).exists? %>
            <%= game.bets.where(user_id: current_user.id).take(1)[0].score1 %>
            <% if game.numscore >= 2 %>
            - <%= game.bets.where(user_id: current_user.id).take(1)[0].score2 %>
            <% end %>
            <% if game.numscore >= 3 %>
            - <%= game.bets.where(user_id: current_user.id).take(1)[0].score3 %>
            <% end %>

            <% end %>  
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="span4">
    <h3>Classificacio</h3>
    <table class="table table-striped table-condensed table-bordered">
      <thead>
        <tr>
          <th>Jugador</th>
          <th>Punts</th>
        </tr>
      </thead>
      <tbody>
        <% @standings.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.numpoints %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
