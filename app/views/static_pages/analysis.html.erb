<div class="row">
  <div class="col-md-3">
    <h3>Analisis</h3>
    <%= form_tag analysis_path, :method => :get do %>
      <%= select_tag :typescore, options_for_select(Settings.typeScore, @typescore), include_blank: true %>
      <%= submit_tag "Find" %>
    <% end %>
    <table class="table table-striped table-responsive table-bordered">
      <thead>
        <tr>
          <th>Jugador</th>
          <th>Punts</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @standings.each_with_index do |user, index| %>
        <tr>
          <td><%= user.username %>
              <% if user.position - index > 0 %>
                <span class="badge">+<%= user.position - index %></span>
              <% elsif user.position - index < 0 %>
                <span class="badge"><%= user.position - index %></span>
              <% end %>
            </td>
          <td><%= user.provpoints %>
          </td>
          <td><%= user.numpoints %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
