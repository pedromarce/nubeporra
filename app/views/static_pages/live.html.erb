<div class="row">
  <div class="col-md-3">
    <h3>Classif Prov</h3>
    <table class="table table-striped table-responsive table-bordered">
      <thead>
        <tr>
          <th>Jugador</th>
          <th>Punts</th>
        </tr>
      </thead>
      <tbody>
        <% @standings.each_with_index do |user, index| %>
        <tr>
          <td><%= user.username %>
              <% if user.position - index > 0 %>
                <span class="badge">+<%= user.position - index %></span>
              <% elsif user.position - index < 0 %>
                <span class="badge"><%= user.position - index %></span>
              <% end %>
            </td>
          <td><%= user.provpoints %>
              <% if user.openpoints > 0 %>
                <span class="badge">+<%= user.openpoints %></span>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h3>Partits En Directe</h3>
    <table class="table table-striped table-responsive table-bordered">
      <thead>
        <tr>
          <th>Apostes</th>
          <th>Inici</th>
          <th>Partit</th>
          <th>Resultat</th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
        <tr>
          <td>
            <%= link_to 'Veure',
            game_bets_path(game.id),
            :class => 'btn btn-primary', :remote => true %>
          </td>
          <td><%= game.gameTime.strftime("%I:%M%p") %></td>
          <td><%= game.description %></td>
          <td><%= game.score %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4" id="apostes">
  </div>
</div>
