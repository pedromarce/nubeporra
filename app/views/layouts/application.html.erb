<!DOCTYPE html>
<html>
<head>
  <title>Nubeporra</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>


<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-header">
    <a class="navbar-brand" href="/home">NubePorra</a>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>

  <div class="collapse navbar-collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to "Directe", live_path  %></li>
      <li><%= link_to "Analisis", analysis_path  %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Accions <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Boxing", boxings_path  %></li>
          <li><%= link_to "Partits", games_path  %></li>
        </ul>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resultats <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Futbol", football_path %></li>
          <li><%= link_to "NBA", nba_path  %></li>
          <li><%= link_to "ACB", acb_path  %></li>
          <li><%= link_to "ASOBAL", asobal_path  %></li>
          <li><%= link_to "FUTSAL", futsal_path  %></li>
        </ul>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Usuari <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% if user_signed_in? %>
          <li><%= link_to "Canvia detalls", edit_user_registration_path  %></li>
          <li><%= link_to "Tanca sessio", destroy_user_session_path, :method => :delete %></li>
          <% else %>
          <li><%= link_to "Registra't", new_user_registration_path %></li>
          <li><%= link_to "Inicia sessio", new_user_session_path %></li>
          <% end %>
        </ul>
      </li>
    </ul>
    <div class="navbar-header navbar-right">
        <% if user_signed_in? %>
        <p class="navbar-text"><a href="#">Estas logat com <%= current_user.email %></a></p>
        <% end %>  
    </div>
  </div><!-- /.navbar-collapse -->
</nav>


<div class="container">
  <%= render 'layouts/flash_messages' %>  
  <%= yield %>
</div>

</body>
</html>

