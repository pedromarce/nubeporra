<%- model_class = Bet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:score1) %>:</strong></dt>
  <dd><%= @bet.score1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score2) %>:</strong></dt>
  <dd><%= @bet.score2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score3) %>:</strong></dt>
  <dd><%= @bet.score3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:betTime) %>:</strong></dt>
  <dd><%= @bet.betTime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @bet.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game_id) %>:</strong></dt>
  <dd><%= @bet.game_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_type_1_id) %>:</strong></dt>
  <dd><%= @bet.score_type_1_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_type_2_id) %>:</strong></dt>
  <dd><%= @bet.score_type_2_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_type_3_id) %>:</strong></dt>
  <dd><%= @bet.score_type_3_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bet_path(@bet), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bet_path(@bet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
