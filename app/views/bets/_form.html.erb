<%= form_for [@game, @bet], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :score1, :class => 'control-label' %>
    <div class="controls">
      <%= select(:bet, :score1, Settings[@bet.game.typescore], options={:class => "selectpicker"}) %>
    </div>
  </div>
  <% if @bet.game.numscore >= 2 %>
    <div class="control-group">
      <%= f.label :score2, :class => 'control-label' %>
      <div class="controls">
        <%= select(:bet, :score2, Settings[@bet.game.typescore], options={:class => "selectpicker"}) %>
      </div>
    </div>
  <% end %>
  <% if @bet.game.numscore >= 3 %>
    <div class="control-group">
      <%= f.label :score3, :class => 'control-label' %>
      <div class="controls">
        <%= select(:bet, :score3, Settings[@bet.game.typescore], options={:class => "selectpicker"}) %>
      </div>
    </div>
  <% end %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                home_path, :class => 'btn' %>
  </div>
<% end %>
