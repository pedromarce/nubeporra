<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @game.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score1) %>:</strong></dt>
  <dd><%= @game.score1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score2) %>:</strong></dt>
  <dd><%= @game.score2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score3) %>:</strong></dt>
  <dd><%= @game.score3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:closeTime) %>:</strong></dt>
  <dd><%= @game.closeTime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gameTime) %>:</strong></dt>
  <dd><%= @game.gameTime %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
